---
import { Image } from 'astro:assets';
import Step1 from '../assets/images/step1.jpg';
import Step2 from '../assets/images/step2.jpg';
import Step3 from '../assets/images/step3.jpg';
import Step4 from '../assets/images/step4.jpg';
import Step5 from '../assets/images/step5.jpg';
import Step6 from '../assets/images/step6.jpg';
import Step7 from '../assets/images/step7.jpg';
import Step8 from '../assets/images/step8.jpg';
import Step9 from '../assets/images/step9.jpg';
---
<div class="splide">
  <div class="splide__track">
    <div class="splide__list">
      <figure class="splide__slide">
        <Image src={Step1} alt="Step1" class="step-image" />
      </figure>
      <figure class="splide__slide">
        <Image src={Step2} alt="Step2" class="step-image" />
      </figure>
      <figure class="splide__slide">
        <Image src={Step3} alt="Step3" class="step-image" />
      </figure>
      <figure class="splide__slide">
        <Image src={Step4} alt="Step4" class="step-image" />
      </figure>
      <figure class="splide__slide">
        <Image src={Step5} alt="Step5" class="step-image" />
      </figure>
      <figure class="splide__slide">
        <Image src={Step6} alt="Step6" class="step-image" />
      </figure>
      <figure class="splide__slide">
        <Image src={Step7} alt="Step7" class="step-image" />
      </figure>
      <figure class="splide__slide">
        <Image src={Step8} alt="Step8" class="step-image" />
      </figure>
      <figure class="splide__slide">
        <Image src={Step9} alt="Step9" class="step-image" />
      </figure>
    </div>
  </div>
</div>

<style>
.splide__track {
  max-width: 380px;
  }
.splide {
  padding-bottom: 2rem;
    text-align: center;
  }
.step-image {
  max-height: 720px;
  width: auto;
  }
</style>